{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "ServerManager",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/src/main.ts",
            "outFiles": ["${workspaceFolder}/bin/**/*.js"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "trace": true,
            "sourceMaps": true,
            "args": [
                "SERVER_MANAGER",
                "1"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "NodeController",
            "program": "${workspaceFolder}/bin/main.js",
            "outFiles": ["${workspaceFolder}/bin/**/*.js"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "args": [
                "NODE_CONTROLLER",
                "1"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "SquareHeadsManager",
            "program": "${workspaceFolder}/bin/main.js",
            "outFiles": ["${workspaceFolder}/bin/**/*.js"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            // "console": "integratedTerminal",// This version allows input console commands.
            "args": [
                "SQUARE_HEADS_MANAGER",
                "1"
            ]
        }
    ]
}